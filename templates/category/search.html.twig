{% extends 'base.html.twig' %}

{% block title %}Category Search{% endblock %}

 {% block pageheader %}
     <h1>Category Search</h1>
     {% if categories|length %}
         <p class="count">
             Displaying {{ categories|length }} categories of {{ categories.getTotalItemCount }} total.
         </p>
     {% endif %}
 {% endblock %}

{% block body %}

    {% include 'partial/search-form.html.twig' %}
    {% if categories|length %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Label</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>

                    <td>
                        <a href="{{ path('category_show', {'id': category.id}) }}">
                            {{ category.id }}
                        </a>
                    </td>
                    <td>
                        {{ category.name }}
                    </td>

                    <td>
                        {{ category.label }}
                    </td>

                    <td>
                        {{ category.description }}
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>


        <div class="navigation">
            {{ knp_pagination_render(categories) }}
        </div>
    {% endif %}

{% endblock %}

