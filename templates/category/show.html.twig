{% extends 'base.html.twig' %}

{% block title %}Category: {{ category.label }}{% endblock %}

 {% block pageheader %}
     <h1>Category: {{ category.label }}</h1>
 {% endblock %}

{% block action_buttons %}
    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-light">
        <span class="bi bi-pencil-square"></span> Edit </a>
    <form class='delete-form' method="post" action="{{ path('category_delete', {'id': category.id}) }}"
            onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ category.id) }}">
        <button class="btn btn-danger"><span class="bi bi-trash"></span> Delete</button>
    </form>
{% endblock %}

{% block body %}
    {% include 'partial/basic-list.html.twig' %}
{% endblock %}
