<table class="table table-striped table-sm" title="List of challenges">
    <thead>
        <tr>
            <th>Submitter</th>
            <th>Entity</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        {% for comment in comments %}
            <tr>
                <td>
                    <a href="{{ path('nines_feedback_comment_show', {id: comment.id}) }}">
                        {{ comment.fullname }}
                    </a>
                </td>
                <td>
                    {% include '@NinesUtil/linked_entity/link.html.twig' with {
                        entity: comment
                    } %}
                </td>
                <td>
                    <a href="{{ path('nines_feedback_comment_show', {id: comment.id}) }}">
                        {{ comment.content|u.truncate(40, '...') }}
                    </a>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
