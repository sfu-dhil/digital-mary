{{ form_start(form) }}
<input type="hidden" name="entity_id" value="{{ entity.id }}" />
<input type="hidden" name="entity_class" value="{{ entity|class_name }}" />
<input type="hidden" name="comment[followUp]" value="1" />
{{ form_row(form.recaptcha) }}
{{ form_row(form.fullname) }}
{{ form_row(form.email) }}
{{ form_row(form.content, {'label': 'Message'}) }}
{{ form_row(form._token) }}
<div class="mb-3 row">
    <div class="col-sm-2"></div>
    <div class="col-sm-10">
        {% if comment.id is null %}
            <input type="submit" value="Create" class="btn btn-primary" />
            <a href="{{ path('nines_feedback_comment_index') }}" class="btn btn-warning"> Cancel </a>
        {% else %}
            <input type="submit" value="Update" class="btn btn-primary" />
            <a href="{{ path('nines_feedback_comment_show', {id: comment.id}) }}" class="btn btn-warning"> Cancel </a>
        {% endif %}
    </div>
</div>
{{ form_end(form, {render_rest: false}) }}

