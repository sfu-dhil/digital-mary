<div>
    {% set form = comment_service.getForm() %}
    {{ form_start(form, {'action': path('nines_feedback_comment_new')}) }}
    <input type="hidden" name="entity_id" value="{{entity.id}}"/>
    <input type="hidden" name="entity_class" value="{{entity|class_name}}" />
    <input type="hidden" name="comment[followUp]" value="1" />
    {{ form_row(form.recaptcha) }}
    {{ form_row(form.fullname) }}
    {{ form_row(form.email) }}
    {{ form_row(form.content, {'label': 'Message'}) }}
    {{ form_row(form._token) }}
    <div class="mb-3 row">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>
    {{ form_end(form, {render_rest: false}) }}
</div>
