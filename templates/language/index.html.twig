{% extends 'base.html.twig' %}

{% block title %}All Languages{% endblock %}

{% block pageheader %}
    <h1>All Languages</h1>
    {% include 'partial/count.html.twig' with {'index': languages, 'label': 'languages'} %}
{% endblock %}


{% block action_buttons %}
    <a href="{{ path('language_new') }}" class="btn btn-light">
        <span class="bi bi-plus-lg"></span> New
    </a>
    <a href="{{ path('language_search') }}" class="btn btn-light">
        <span class="bi bi-search"></span> Search
    </a>
{% endblock %}


{% block body %}
    {% include 'partial/term-table.html.twig' with {'items': languages} %}
{% endblock %}
