{% set index_route = app.request.attributes.get('_route') %}
{% set show_route = index_route|replace({'_index': '_show'}) %}

<table class="table table-condensed">
    <thead>
    <tr>
        <th>Label</th>
        <th class="admin">ID</th>
        <th class="admin">Label</th>
        <th>Description</th>
        <th>Items</th>
    </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr>
            <td><a href="{{ path(show_route, {'id': item.id}) }}">{{ item.label }}</a></td>
            <td class="admin">{{ item.id }}</td>
            <td class="admin">{{ item.name }}</td>
            <td>{{ item.description|raw }}</td>
            <td>{{ item.items|length }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<div class="navigation">
    {{ knp_pagination_render(items) }}
</div>