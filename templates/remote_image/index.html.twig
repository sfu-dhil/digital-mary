{% extends 'base.html.twig' %}

{% block title %}Remote Image List{% endblock %}

{% block pageheader %}
    <h1>Remote Image List</h1>
    <p class="count">
        Displaying {{ remote_images|length }} remote_images of {{ remote_images.getTotalItemCount }} total.
    </p>
 {% endblock %} 

{% block body %}

    <div class='btn-toolbar'>
        <div class='btn-group'>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('remote_image_new') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-plus"></span> New
            </a>
            {% endif %}

            <a href="{{ path('remote_image_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search
            </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>ID</th>                                           <th>Url</th>
                                                               <th>Title</th>
                                                               <th>Description</th>
                    
            </tr>
        </thead>
        <tbody>
        {% for remote_image in remote_images %}
            <tr>

                <td>
                    <a href="{{ path('remote_image_show', { 'id': remote_image.id }) }}">
                        {{ remote_image.id }}
                    </a>
                </td>
                <td>
                    {{ remote_image.url }}
                </td>
            
                <td>
                    {{ remote_image.title }}
                </td>
            
                <td>
                    {{ remote_image.description }}
                </td>
            
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(remote_images) }}
    </div>

{% endblock %}
