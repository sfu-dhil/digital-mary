<div class="img-thumbnail">
    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class="d-grid gap-2 d-md-block m-2 text-end">
            <a href="{{ path('item_edit_image', {'id': image.item.id, 'image_id': image.id}) }}"
                class="btn btn-light">
                <span class='bi bi-pencil-square'></span> </a>
            <form class='delete-form' method="post" action="{{ path('item_delete_image', {'id': image.item.id, 'image_id': image.id}) }}"
                    onsubmit="return confirm('Are you sure you want to delete this image?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ image.id) }}">
                <button class="btn btn-danger"><span class="bi bi-x-lg"></span></button>
            </form>
        </div>
    {% endif %}

    <div class="img-container">
        <a href="#imgModal" data-bs-toggle="modal" data-title="{{ image.originalName }}"
           data-date="{{ image.created|date }}"
           data-target="#imgModal" data-img="{{ path('image_view', {'id': image.id}) }}">
            <img src="{{ path('image_thumbnail', {'id': image.id}) }}" class="img-thumbnail"/>
        </a>
    </div>

    <div class="caption">
        <div class='title'>
            {{ image.originalName }}
        </div>
        {{ image.description|raw }}
        <p>Item:
            <a href="{{ path('item_show', {'id': image.item.id}) }}">
                {{ image.item }}
            </a>
        </p>
    </div>

</div>

