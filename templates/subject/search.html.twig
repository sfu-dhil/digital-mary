{% extends 'base.html.twig' %}

{% block title %}Subject Search{% endblock %}

 {% block pageheader %}
     <h1>Subject Search</h1>
     {% if subjects|length %}
         <p class="count">
             Displaying {{ subjects|length }} subjects of {{ subjects.getTotalItemCount }} total.
         </p>
     {% endif %}
 {% endblock %}

{% block body %}

    {% include 'partial/search-form.html.twig' %}

    {% if subjects|length %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Label</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                {% for subject in subjects %}
                    <tr>

                        <td>
                            <a href="{{ path('subject_show', {'id': subject.id}) }}">
                                {{ subject.id }}
                            </a>
                        </td>
                        <td>
                            {{ subject.name }}
                        </td>

                        <td>
                            {{ subject.label }}
                        </td>

                        <td>
                            {{ subject.description }}
                        </td>

                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(subjects) }}
        </div>
    {% endif %}

{% endblock %}

