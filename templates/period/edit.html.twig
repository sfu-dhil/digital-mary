{% extends 'base.html.twig' %}

    {% block title %}Edit Period {% endblock %}

    {% block body %}
        <h1>Edit Period</h1>

        {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="mb-3 row">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">
                <input type="submit" value="Save" class="btn btn-primary"/>
                <a href="{{ path('period_show', {'id': period.id}) }}" class="btn btn-warning">
                    Cancel
                </a>
            </div>
        </div>
        {{ form_end(form) }}

    {% endblock %}

    {% block javascripts %}
        {% include '@NinesEditor/editor/widget.html.twig' %}
    {% endblock %}
