{% extends 'base.html.twig' %}

{% block title %}Period: {{ period.label }}{% endblock %}

 {% block pageheader %}
     <h1>Period: {{ period.label }}</h1>
 {% endblock %}

{% block action_buttons %}
    <a href="{{ path('period_edit', {'id': period.id}) }}" class="btn btn-light">
        <span class="bi bi-pencil-square"></span> Edit </a>
    <form class='delete-form' method="post" action="{{ path('period_delete', {'id': period.id}) }}"
            onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ period.id) }}">
        <button class="btn btn-danger"><span class="bi bi-trash"></span> Delete</button>
    </form>
{% endblock %}

{% block body %}
    {% include 'partial/basic-list.html.twig' %}
{% endblock %}
