{% extends 'base.html.twig' %}

{% block title %}Inscription Style: {{ inscription_style }}{% endblock %}

 {% block pageheader %}
     <h1>Inscription Style: {{ inscription_style }}</h1>
 {% endblock %}


{% block action_buttons %}
    <a href="{{ path('inscription_style_edit', {'id': inscription_style.id}) }}" class="btn btn-light">
        <span class="bi bi-pencil-square"></span> Edit
    </a>
    <form class='delete-form' method="post"
            action="{{ path('inscription_style_delete', {'id': inscription_style.id}) }}"
            onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ inscription_style.id) }}">
        <button class="btn btn-danger"><span class="bi bi-trash"></span> Delete</button>
    </form>
{% endblock %}

{% block body %}
    {% include 'partial/basic-list.html.twig' with {'this': inscription_style} %}
{% endblock %}
